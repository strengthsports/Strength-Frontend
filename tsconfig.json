{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "types": ["nativewind/types"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["*"],
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.jsx",
    "**/*.js",
    ".expo/types/**/*.ts",
    "nativewind-env.d.ts",
    "expo-env.d.ts",
    "context/AuthContext.tsx",
    "context/AuthContext.ts",
    "nativewind-env.d.ts"
  ]
}
